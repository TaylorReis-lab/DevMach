import { useNavigate, useLocation } from 'react-router-dom';

interface DevProfile {
  id: number;
  name: string;
  role: string;
  techs: string[];
  location: string;
  description: string;
  image: string;
  experience?: string;
  projects?: string[];
  github?: string;
  linkedin?: string;
}

export function ProfileDetail() {
  const navigate = useNavigate();
  const location = useLocation();
  const profile = location.state as DevProfile;

  if (!profile) {
    navigate('/swipe');
    return null;
  }

