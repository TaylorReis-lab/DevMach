"import { useState } from 'react';\nimport { useNavigate } from 'react-router-dom';\n\ninterface Message {\n  id: number;\n  sender: string;\n  content: string;\n  timestamp: string;\n  unread: boolean;\n}\n\ninterface Conversation {\n  id: number;\n  name: string;\n  image: string;\n  lastMessage: string;\n  timestamp: string;\n  unreadCount: number;\n}\n\nexport function Messages() {\n  const navigate = useNavigate();\n  \n  // Conversas simuladas\n  const [conversations] = useState<Conversation[]>([\n    {\n      id: 1,\n      name: \"Ana Silva\",\n      image: \"/placeholder.jpg\",\n      lastMessage: \"Obrigada pelo match! Vamos marcar um caf√©?\",\n      timestamp: \"12:30\",\n      unreadCount: 2\n    },\n    {\n      id: 2,\n      name: \"Carlos Oliveira\",\n      image: \"/placeholder.jpg\",\n      lastMessage: \"Top! Amanh√£ √†s 15h naquela cafeteria do centro\",\n      timestamp: \"10:15\",\n      unreadCount: 0\n    },\n    {\n      id: 3,\n      name: \"Mariana Costa\",\n      image: \"/placeholder.jpg\",\n      lastMessage: \"Acabei de terminar um projeto com React e TypeScript...\",\n      timestamp: \"Ontem\",\n      unreadCount: 1\n    }\n  ]);\n\n  // Mensagens da conversa selecionada\n  const [selectedConversation, setSelectedConversation] = useState<Conversation | null>(null);\n  \n  const [messages, setMessages] = useState<Message[]>([\n    {\n      id: 1,\n      sender: \"Ana Silva\",\n      content: \"Ol√°! Vi que voc√™ tamb√©m √© Full Stack. Que tecnologias voc√™ costuma usar?\",\n      timestamp: \"10:00\",\n      unread: false\n    },\n    {\n      id: 2,\n      sender: \"voc√™\",\n      content: \"Oi Ana! Eu trabalho principalmente com React, Node.js e PostgreSQL. E voc√™?\",\n      timestamp: \"10:05\",\n      unread: false\n    },\n    {\n      id: 3,\n      sender: \"Ana Silva\",\n      content: \"Legal! Eu uso React com TypeScript, NestJS e MongoDB. Tamb√©m tenho experi√™ncia com AWS.\",\n      timestamp: \"10:10\",\n      unread: false\n    },\n    {\n      id: 4,\n      sender: \"Ana Silva\",\n      content: \"Obrigada pelo match! Vamos marcar um caf√©?\",\n      timestamp: \"12:30\",\n      unread: true\n    }\n  ]);\n\n  const [newMessage, setNewMessage] = useState('');\n\n  const handleSendMessage = () => {\n    if (newMessage.trim() === '') return;\n    \n    const newMsg: Message = {\n      id: messages.length + 1,\n      sender: \"voc√™\",\n      content: newMessage,\n      timestamp: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),\n      unread: false\n    };\n    \n    setMessages([...messages, newMsg]);\n    setNewMessage('');\n  };\n\n  const handleSelectConversation = (conversation: Conversation) => {\n    setSelectedConversation(conversation);\n  };\n\n  const handleBack = () => {\n    navigate('/swipe');\n  };\n\n  return (\n    <div className=\"min-h-screen bg-gradient-to-br from-blue-50 via-white to-purple-50 flex flex-col\">\n      <div className=\"p-4 bg-white shadow-sm flex items-center\">\n        <button \n          onClick={handleBack}\n          className=\"text-indigo-600 hover:text-indigo-800 mr-4\"\n        >\n          <svg xmlns=\"http://www.w3.org/2000/svg\" className=\"h-6 w-6\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n            <path strokeLinecap=\"round\" strokeLinejoin=\"round\" strokeWidth={2} d=\"M10 19l-7-7m0 0l7-7m-7 7h18\" />\n          </svg>\n        </button>\n        <h1 className=\"text-2xl font-bold text-indigo-600\">Mensagens</h1>\n      </div>\n\n      <div className=\"flex flex-1 overflow-hidden\">\n        {/* Lista de conversas */}\n        {!selectedConversation ? (\n          <div className=\"w-full md:w-1/3 border-r border-gray-200 overflow-y-auto\">\n            {conversations.map(conversation => (\n              <div \n                key={conversation.id}\n                className={`p-4 border-b border-gray-100 hover:bg-gray-50 cursor-pointer flex items-start ${conversation.unreadCount > 0 ? 'bg-blue-50' : ''}`}\n                onClick={() => handleSelectConversation(conversation)}\n              >\n                <div className=\"relative\">\n                  <div className=\"w-12 h-12 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center flex-shrink-0\">\n                    <span className=\"text-gray-600\">üë§</span>\n                  </div>\n                  {conversation.unreadCount > 0 && (\n                    <span className=\"absolute -top-1 -right-1 bg-red-500 text-white rounded-full text-xs w-5 h-5 flex items-center justify-center\">\n                      {conversation.unreadCount}\n                    </span>\n                  )}\n                </div>\n                <div className=\"ml-3 flex-1\">\n                  <div className=\"flex justify-between items-center\">\n                    <h3 className=\"font-medium text-gray-800\">{conversation.name}</h3>\n                    <span className=\"text-xs text-gray-500\">{conversation.timestamp}</span>\n                  </div>\n                  <p className=\"text-sm text-gray-600 truncate mt-1\">{conversation.lastMessage}</p>\n                </div>\n              </div>\n            ))}\n          </div>\n        ) : (\n          // √Årea de conversa\n          <div className=\"flex-1 flex flex-col\">\n            {/* Header da conversa */}\n            <div className=\"p-4 bg-white shadow-sm flex items-center\">\n              <button \n                onClick={() => setSelectedConversation(null)}\n                className=\"md:hidden text-indigo-600 hover:text-indigo-800 mr-4\"\n              >\n                <svg xmlns=\"http://www.w3.org/2000/svg\" className=\"h-5 w-5\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n                  <path strokeLinecap=\"round\" strokeLinejoin=\"round\" strokeWidth={2} d=\"M10 19l-7-7m0 0l7-7m-7 7h18\" />\n                </svg>\n              </button>\n              <div className=\"w-10 h-10 rounded-full bg-gradient-to-br from-indigo-100 to-purple-100 flex items-center justify-center\">\n                <span className=\"text-gray-600\">üë§</span>\n              </div>\n              <div className=\"ml-3\">\n                <h3 className=\"font-medium text-gray-800\">{selectedConversation.name}</h3>\n                <p className=\"text-xs text-gray-500\">Online</p>\n              </div>\n            </div>\n\n            {/* Mensagens */}\n            <div className=\"flex-1 overflow-y-auto p-4 space-y-4\">\n              {messages.map(message => (\n                <div \n                  key={message.id}\n                  className={`flex ${message.sender === 'voc√™' ? 'justify-end' : 'justify-start'}`}\n                >\n                  <div \n                    className={`max-w-xs md:max-w-md px-4 py-2 rounded-2xl ${\n                      message.sender === 'voc√™' \n                        ? 'bg-indigo-600 text-white rounded-br-none' \n                        : 'bg-gray-100 text-gray-800 rounded-bl-none'\n                    }`}\n                  >\n                    <p>{message.content}</p>\n                    <p className={`text-xs mt-1 ${\n                      message.sender === 'voc√™' ? 'text-indigo-100' : 'text-gray-500'\n                    }`}>\n                      {message.timestamp}\n                    </p>\n                  </div>\n                </div>\n              ))}\n            </div>\n\n            {/* Input de mensagem */}\n            <div className=\"p-4 bg-white border-t border-gray-200 flex items-center\">\n              <input\n                type=\"text\"\n                value={newMessage}\n                onChange={(e) => setNewMessage(e.target.value)}\n                onKeyPress={(e) => e.key === 'Enter' && handleSendMessage()}\n                placeholder=\"Digite uma mensagem...\"\n                className=\"flex-1 rounded-full border border-gray-300 px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent\"\n              />\n              <button\n                onClick={handleSendMessage}\n                disabled={newMessage.trim() === ''}\n                className=\"ml-2 p-2 rounded-full bg-indigo-600 text-white hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed\"\n              >\n                <svg xmlns=\"http://www.w3.org/2000/svg\" className=\"h-5 w-5\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n                  <path strokeLinecap=\"round\" strokeLinejoin=\"round\" strokeWidth={2} d=\"M12 19l9 2-9-18-9 18 9-2z\" />\n                </svg>\n              </button>\n            </div>\n          </div>\n        )}\n      </div>\n    </div>\n  );\n}"